<% if params[:action] == 'search' %>
<p></p>
  <div class="ui danger message">
    <%  if params[:search_param].blank? %>
      <%=  flash.now[:danger] = "Please enter a username to search for Users." %>
    <%  else %>
      <%  @users = User.search(params[:search_param]) %>
      <%  @users = current_user.except_current_user(@users) %>
      <%=  flash.now[:danger] = "No users matches this search criteria." if @user.blank? %>
    <%  end%>
  </div>
<% end %>

<% if @users %>
  <div id="friend-lookup-results" class="well results-block col-md-10">
    <table class="search-results-table col-md-12">
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><strong>Name:</strong> <%= user.username %></td>
            <td><strong>Profile:</strong> <%= link_to "View Profile", "#",
                                          class: "btn btn-xs btn-success" %>
              <% if current_user.not_friends_with?(user.id) %>
                <%= link_to "Add as my friend",
                        add_friend_path(user: current_user, friend: user),
                          class: "btn btn-xs btn-success", method: :post %>
              <% else %>
                <span class="label label-primary">
                  You are friends
                </span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
